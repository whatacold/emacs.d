import socket$0

host = '127.0.0.1'
port = ${1:12345}
bufsize = 1024
message = "Hello, World!"

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect((host, port))
s.send(message)
data = s.recv(bufsize)
s.close()

print "received data:", data