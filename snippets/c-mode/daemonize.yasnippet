#include <unistd.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <stdlib.h>$0

void daemonize()
{
    int fd;
    pid_t rc;

    if ((rc = fork()) != 0) {
        $1
        exit(1);
    } else if (rc > 0) {
        exit(0); /* parent exits */
    }

    setsid(); /* create a new session */

    if ((fd = open("/dev/null", O_RDWR, 0)) != -1) {
        dup2(fd, STDIN_FILENO);
        dup2(fd, STDOUT_FILENO);
        dup2(fd, STDERR_FILENO);
        if (fd > STDERR_FILENO) {
            close(fd);
        }
    }
}
